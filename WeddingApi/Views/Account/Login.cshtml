<div class="container">
    <div class="regcard">
        <div class="regcover">
            <div class="regfrom">
                <div class="form-wrap">
                    <!--.tabs-->
                    <div class="tabs">
                        <h5 class="login-wc-tab"><a class="active" href="#login-wc-tab-content">Wedding Couple</a></h5>
                        <h5 class="login-guset-tab"><a href="#login-guest-tab-content">Guest</a></h5>
                    </div>
                    <!--.tabs-->
                    <h2 class="text-center">Login</h2>
                    <div class="tabs-content">
                        <div id="login-wc-tab-content" class="active">
                            <!--.login-form-wd-->
                            <form asp-action="Login" class="login-form-wd">
                                <div class="form-group">
                                    <input class="form-control" placeholder="Email" type="email" asp-for="Email">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" type="text" asp-for="Password">
                                </div>
                                <div class="form-group">
                                    <button name="submit" class="btn btn-block btn-lg reg-login-btn" type="submit">Login</button>
                                </div>
                                <a asp-controller="Home" asp-action="Index">Back</a>
                            </form><!--.login-form-wd-->
                            <div class="help-text text-center">
                                <div class="text-center">Don't have an account? <a asp-controller="Account" asp-action="Register">Sign up here</a></div>
                            </div>
                            <a asp-controller="Dashboard" asp-action="Index">Test login </a>
                        </div>
                        <div id="login-guest-tab-content">
                            <!--.login-form-guest-->
                            <form asp-action="Login" class="login-form-guest">
                                <div class="form-group">
                                    <input class="form-control" id="guest-code" autocomplete="off" placeholder="Code" type="text">
                                </div>
                                <div class="form-group">
                                    <button name="submit" type="submit" class="btn btn-block btn-lg reg-login-btn ">Login</button>
                                </div>
                            </form>
                            <!--.login-form-guest-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>